# General style setup
# see https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
# Unix-style newlines
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 2

# 4 spaces for python & resturctured text
[{*.py,*.rst}]
indent_size = 4

[Makefile]
indent_style=tab
